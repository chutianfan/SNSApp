    <RelativeLayout android:background="@drawable/base_item_bg_selector" android:layout_width="fill_parent" android:layout_height="@dimen/friends_item_height">
        <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/setting_magin_left" android:layout_centerVertical="true">
            <TextView android:textSize="@dimen/title_content_text_size" android:textColor="@color/setting_title_text_color" android:id="@id/extract_money_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="86.00" />
