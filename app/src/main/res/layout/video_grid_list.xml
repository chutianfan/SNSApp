<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout android:gravity="center_vertical" android:orientation="horizontal" android:background="@color/action_bar_bg" android:layout_width="fill_parent" android:layout_height="@dimen/recoder_top_height">
        <ImageView android:id="@id/back_iv" android:padding="@dimen/forget_margin" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/black_back_iv_bg" android:layout_alignParentLeft="true" android:onClick="onClick" />
        <TextView android:textSize="@dimen/title_text_size" android:textColor="#ffffffff" android:gravity="center" android:layout_width="wrap_content" android:layout_height="fill_parent" android:text="选择视频" android:layout_centerInParent="true" />
        <LinearLayout android:gravity="right|center" android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="fill_parent">
            <TextView android:textSize="@dimen/text_size_eightteen" android:textColor="#ffffffff" android:gravity="center" android:id="@id/ok_tv" android:paddingLeft="@dimen/forget_margin" android:paddingRight="@dimen/forget_margin" android:clickable="true" android:layout_width="wrap_content" android:layout_height="fill_parent" android:text="下一步" android:onClick="onClick" />
        </LinearLayout>
    </RelativeLayout>
    <GridView android:id="@id/iv_video_grid" android:scrollbars="none" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_margin="@dimen/video_margin" android:listSelector="@null" android:horizontalSpacing="@dimen/video_margin" android:verticalSpacing="@dimen/video_margin" android:numColumns="4" />
</LinearLayout>