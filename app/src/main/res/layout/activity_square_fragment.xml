<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/rl_containr"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <com.baoyz.swipemenulistview.XListView
        android:id="@id/square_listview"
        style="@style/SquareXListView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:divider="@null"
        android:footerDividersEnabled="false"
        android:headerDividersEnabled="false"
        android:listSelector="#00000000"
        android:scrollbars="none" />

    <LinearLayout
        android:id="@id/square_hot_huati_ll"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/theme_hot_newest_guide_height"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="20.0dip"
        android:paddingRight="20.0dip"
        android:visibility="visible">

        <TextView
            android:id="@id/square_hot_huati_tv"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="@drawable/personal_middle_9_selector"
            android:gravity="center"
            android:paddingLeft="@dimen/theme_header_padding"
            android:text="@string/hot_subject_title"
            android:textColor="@color/person_foot_num_color"
            android:textSize="@dimen/title_content_text_size" />

        <TextView
            android:id="@id/square_hot_user_tv"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="@drawable/personal_middle_9_selector"
            android:gravity="center"
            android:paddingRight="@dimen/theme_header_padding_right"
            android:text="@string/hot_star"
            android:textColor="@color/person_foot_num_color"
            android:textSize="@dimen/title_content_text_size" />
    </LinearLayout>


</RelativeLayout>