<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/dialog_bg"
    android:orientation="vertical"
    android:padding="@dimen/dialog_padding">

    <TextView
        android:id="@id/tv_tip_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/distance_max_big_content"
        android:layout_marginTop="@dimen/distance_middle_content"
        android:gravity="center"
        android:textColor="@color/setting_title_text_color"
        android:textSize="@dimen/text_size_eightteen" />

    <TextView
        android:id="@id/pop_tv_submit"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/action_bar_height"
        android:layout_marginTop="13.0dip"
        android:background="@drawable/white_round_broder_selector"
        android:gravity="center"
        android:text="@string/modify_nickname_sure"
        android:textColor="@color/setting_title_text_color"
        android:textSize="@dimen/title_text_size" />

    <TextView
        android:id="@id/pop_tv_cancel"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/action_bar_height"
        android:layout_marginTop="13.0dip"
        android:background="@drawable/white_round_broder_selector"
        android:gravity="center"
        android:text="@string/cancle"
        android:textColor="@color/hint_text_color"
        android:textSize="@dimen/title_text_size" />
</LinearLayout>