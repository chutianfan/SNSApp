<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:background="@drawable/img_logo_01"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/subject"
        android:textColor="@android:color/white"
        android:textSize="13sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:orientation="horizontal"
        android:gravity="bottom" >

        <TextView android:textSize="@dimen/title_text_size" android:textColor="@color/send_text_color" android:gravity="center" android:id="@id/activity_register_bt" android:paddingTop="5.0dip" android:paddingBottom="5.0dip" android:layout_width="0.0dip" android:layout_height="wrap_content" android:text="가입하기" android:drawableRight="@drawable/login_divider" android:layout_weight="1.0" />
        <TextView android:textSize="@dimen/title_text_size" android:textColor="@color/send_text_color" android:gravity="center" android:id="@id/activity_login_bt" android:paddingTop="5.0dip" android:paddingBottom="5.0dip" android:layout_width="0.0dip" android:layout_height="wrap_content" android:text="로그인" android:layout_weight="1.0" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:gravity="bottom"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        android:text="@string/copyright"
        />

</LinearLayout>