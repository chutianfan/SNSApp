<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView android:textColor="@color/home_release_time_color" android:id="@id/catalog" android:background="@color/chat_media_bg_color" android:paddingLeft="@dimen/distance_small_content" android:paddingTop="@dimen/distance_small_content" android:paddingBottom="@dimen/distance_small_content" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="wrap_content" />
    <RelativeLayout android:background="@drawable/base_item_bg_selector" android:layout_width="fill_parent" android:layout_height="@dimen/friends_item_height" android:layout_below="@id/catalog">
        <RelativeLayout android:id="@id/friends_head_block" android:layout_width="wrap_content" android:layout_height="fill_parent">
            <com.gitrose.mobile.view.CircleImageView android:id="@id/friends_user_head" android:layout_width="@dimen/friends_user_head_size" android:layout_height="@dimen/friends_user_head_size" android:layout_marginLeft="@dimen/friends_user_head_marginleft" android:layout_marginTop="@dimen/friends_user_head_margintop" android:layout_marginRight="@dimen/friends_user_head_marginright" android:layout_marginBottom="@dimen/friends_user_head_marginbottom" android:src="@drawable/app_logo" android:onClick="onClick" />
            <ImageView android:id="@id/friends_is_block" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/isblock" android:scaleType="centerInside" android:layout_alignParentLeft="true" android:layout_centerVertical="true" />
        </RelativeLayout>
        <RelativeLayout android:id="@id/friends_user_info" android:layout_width="wrap_content" android:layout_height="fill_parent" android:layout_marginRight="@dimen/friends_user_info_marginright" android:layout_toRightOf="@id/friends_head_block" android:layout_centerVertical="true" android:layout_alignWithParentIfMissing="true">
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@id/friends_user_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/friends_user_name_margintop" android:layout_marginRight="@dimen/friends_user_name_marginright" android:layout_alignParentTop="true">
                <TextView android:textSize="@dimen/friends_text_size" android:textColor="@color/setting_title_text_color" android:gravity="center_vertical" android:layout_gravity="center_vertical" android:id="@id/friends_user_name_nick" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" />
                <RelativeLayout android:layout_gravity="center_vertical" android:id="@id/friends_sex_age" android:background="@drawable/personal_male_bg" android:layout_width="@dimen/personal_sex_age_width" android:layout_height="@dimen/personal_sex_age_height" android:layout_marginLeft="@dimen/friends_sex_age_marginleft" android:minWidth="@dimen/personal_sex_age_width">
                    <ImageView android:id="@id/friends_sex_icon" android:paddingLeft="@dimen/personal_sex_icon_paddingleft" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/male" android:scaleType="centerInside" android:layout_alignParentLeft="true" android:layout_centerVertical="true" />
                    <TextView android:textSize="@dimen/small_text_size" android:textColor="@color/white" android:gravity="center_vertical" android:id="@id/friends_age_text" android:paddingRight="@dimen/personal_age_text_paddingright" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="19" android:singleLine="true" android:layout_alignParentRight="true" android:layout_centerVertical="true" />
                </RelativeLayout>
                <ImageView android:id="@id/iv_isauth" android:background="@drawable/personal_isauth" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/level_margin_nickname" android:layout_centerVertical="true" />
                <ImageView android:layout_gravity="center" android:id="@id/friends_userhonorlevel" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/level_margin_nickname" android:src="@drawable/userhonorlevel1" />
            </LinearLayout>
            <TextView android:textSize="@dimen/friends_introduce_text_size" android:textColor="@color/home_release_time_color" android:gravity="center_vertical" android:id="@id/friends_introduce" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/friends_introduce_margintop" android:layout_marginRight="@dimen/friends_user_name_marginright" android:singleLine="true" android:layout_below="@id/friends_user_name" android:layout_alignParentLeft="true" />
        </RelativeLayout>
        <ImageView android:id="@id/bottom_line" android:background="@color/setting_divider_color" android:layout_width="fill_parent" android:layout_height="@dimen/bottom_line_height" android:layout_toRightOf="@id/friends_head_block" android:layout_alignLeft="@id/friends_user_info" android:layout_alignParentBottom="true" />
    </RelativeLayout>
</RelativeLayout>