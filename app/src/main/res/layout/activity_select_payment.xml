<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@id/container_rl" android:background="@color/home_bg" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent">
        <RelativeLayout android:id="@id/title_rl" android:background="@color/action_bar_bg" android:layout_width="fill_parent" android:layout_height="@dimen/action_bar_height">
            <ImageView android:gravity="center_vertical" android:id="@id/title_back_iv" android:paddingLeft="@dimen/home_action_bar_margin_left" android:paddingRight="@dimen/home_action_bar_margin_left" android:layout_width="wrap_content" android:layout_height="fill_parent" android:src="@drawable/back_button" android:layout_alignParentLeft="true" android:layout_centerVertical="true" android:onClick="onClick" />
            <TextView android:textSize="@dimen/title_text_size" android:textColor="@color/white" android:id="@id/title_tv_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/pay_title" android:singleLine="true" android:layout_centerInParent="true" />
        </RelativeLayout>
        <TextView android:textSize="@dimen/title_content_text_size" android:textColor="@color/setting_text_color" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/setting_margin_right" android:layout_marginTop="@dimen/setting_magin_top" android:text="@string/select_payment" />
        <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent">
            <RelativeLayout android:id="@id/rl_pay_ali" android:background="@drawable/base_item_bg_selector" android:clickable="true" android:layout_width="fill_parent" android:layout_height="@dimen/action_bar_height" android:layout_marginTop="@dimen/setting_pading_right" android:onClick="onClick">
                <TextView android:textSize="@dimen/text_size_eightteen" android:textColor="@color/setting_title_text_color" android:gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/setting_margin_right" android:text="@string/pay_ali" android:drawableLeft="@drawable/pay_ali_wallet" android:layout_centerVertical="true" />
                <ImageView android:id="@id/img_choice_ali" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/setting_margin_right" android:src="@drawable/icon_choice_hidden_mode" android:layout_alignParentRight="true" android:layout_centerVertical="true" />
                <View android:background="@color/setting_divider_color" android:layout_width="fill_parent" android:layout_height="@dimen/divider_line_height" android:layout_marginLeft="@dimen/setting_magin_left" android:layout_alignParentBottom="true" />
            </RelativeLayout>
            <RelativeLayout android:id="@id/rl_pay_wx" android:background="@drawable/base_item_bg_selector" android:clickable="true" android:layout_width="fill_parent" android:layout_height="@dimen/setting_hidden_item_hieght" android:onClick="onClick">
                <TextView android:textSize="@dimen/text_size_eightteen" android:textColor="@color/setting_title_text_color" android:gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/setting_margin_right" android:text="@string/pay_wx" android:drawableLeft="@drawable/pay_weixin_wallet" android:layout_centerVertical="true" />
                <ImageView android:id="@id/img_choice_wx" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/setting_margin_right" android:src="@drawable/icon_choice_hidden_mode" android:layout_alignParentRight="true" android:layout_centerVertical="true" />
            </RelativeLayout>
            <TextView android:textSize="@dimen/title_text_size" android:textColor="@color/send_text_color" android:gravity="center" android:id="@id/select_payment_sure_tv" android:background="@drawable/login_button" android:layout_width="fill_parent" android:layout_height="@dimen/login_bt_height" android:layout_marginLeft="@dimen/setting_margin_right" android:layout_marginTop="@dimen/setting_magin_top" android:layout_marginRight="@dimen/setting_margin_right" android:text="@string/modify_nickname_sure" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>